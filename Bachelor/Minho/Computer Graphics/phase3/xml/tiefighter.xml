                <scale x="0.75" y="0.75" z="0.75" />
            </transform>
            <models>
                <model file="tie_fighter_visor.3d" />  <!-- Visor -->
            </models>
            <settings>
                    <color c1="0.3" c2="0.3" c3="0.3" />
            </settings>
        </group>
        <group>
            <transform>
                <rotate angle ="90" x="0" y="0" z="1" />
                <translate x="0" y="0" z="-2.8" />
                <scale x="1.5" y="3.5" z="0.75" />
            </transform>
            <models>
                <model file="tie_fighter_wing.3d" />  <!-- Asa Direita -->
            </models>
            <settings>
                    <color c1="0.2" c2="0.2" c3="0.2" />
            </settings>
        </group>
        <group>
            <transform>
                <rotate angle ="90" x="0" y="0" z="1" />
                <translate x="0" y="0" z="2.8" />
                <scale x="1.5" y="3.5" z="0.75" />
            </transform>
            <models>
                <model file="tie_fighter_wing.3d" />   <!-- Asa Esquerda -->
            </models>
            <settings>
                    <color c1="0.2" c2="0.2" c3="0.2" />
            </settings>
        </group>
    </group>
</world>